
---

import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/ferreteria.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar/>
		<slot />
	</body>
</html>


<style is:global>

	@font-face {
		font-family: 'Barletta Regular';
		font-style: normal;
		font-weight: normal;
		src: url('/fonts/Barletta-RpYWA.woff') format('woff');
    }
    

    @font-face {
		font-family: 'Barletta Shadow';
		font-style: normal;
		font-weight: normal;
		src: url('/fonts/BarlettaShadow-BWxMd.woff') format('woff');
    }
</style>